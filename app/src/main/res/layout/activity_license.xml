<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context=".LicenseActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/idbg"
        android:paddingTop="10dp"
        android:paddingLeft="10dp">

        <RelativeLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="80dp">

            <ImageView
                android:id="@+id/phflag"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:src="@drawable/flag" />

            <TextView
                android:id="@+id/rep"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="REPUBLIC OF THE PHILIPPINES"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/dep"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rep"
                android:layout_centerHorizontal="true"
                android:text="DEPARTMENT OF TRANSPORTATION &amp; COMMUNICATIONS"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/land"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/dep"
                android:layout_centerHorizontal="true"
                android:text="LAND TRANSPORTATION OFFICE"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/land"
                android:layout_centerHorizontal="true"
                android:text="EAST AVE QUEZON CITY"
                android:textSize="12sp"
                android:textStyle="bold" />

        </RelativeLayout>

        <ImageView
            android:id="@+id/lto"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginRight="10dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            app:srcCompat="@drawable/lto" />

        <RelativeLayout
            android:id="@+id/leftContainer"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/header">

            <TextView
                android:id="@+id/nameLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="LASTNAME      FIRSTNAME        MIDDLE NAME"
                android:textSize="9sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/lnameContainer"
                android:layout_width="66dp"
                android:layout_height="30dp"
                android:layout_below="@+id/nameLabel"
                android:layout_alignParentLeft="true"
                android:padding="5dp"
                android:textColor="#1e6f5c"
                android:textStyle="bold"
                android:fontFamily="serif"
                android:textSize="8sp"
                tools:ignore="InvalidId" />

            <TextView
                android:id="@+id/fnameContainer"
                android:layout_width="66dp"
                android:layout_height="30dp"
                android:layout_below="@+id/nameLabel"
                android:layout_centerHorizontal="true"
                android:padding="5dp"
                android:textColor="#1e6f5c"
                android:textStyle="bold"
                android:fontFamily="serif"
                android:textSize="8sp"
                tools:ignore="InvalidId" />

            <TextView
                android:id="@+id/mnameContainer"
                android:layout_width="66dp"
                android:layout_height="30dp"
                android:layout_below="@+id/nameLabel"
                android:layout_alignParentRight="true"
                android:padding="5dp"
                android:textColor="#1e6f5c"
                android:textStyle="bold"
                android:fontFamily="serif"
                android:textSize="8sp"
                tools:ignore="InvalidId" />

            <ImageView
                android:id="@+id/idContainer"
                android:layout_width="130dp"
                android:layout_height="140dp"
                android:layout_below="@+id/fnameContainer"
                android:layout_centerHorizontal="true" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/idContainer"
                android:gravity="center_horizontal"
                android:paddingTop="8dp"
                android:text="SIGNATURE OF LICENSE"
                android:textSize="10sp" />


        </RelativeLayout>

            <RelativeLayout
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/leftContainer"
                android:paddingLeft="20dp"
                android:layout_below="@+id/header">

                <TextView
                    android:id="@+id/addressLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="35dp"
                    android:text="BRGY.                 MUNICIPALITY            CITY                PROVINCE"
                    android:textSize="9sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/brgyContainer"
                    android:layout_width="66dp"
                    android:layout_height="30dp"
                    android:layout_below="@+id/addressLabel"
                    android:layout_alignParentLeft="true"
                    android:padding="5dp"
                    android:textColor="#1e6f5c"
                    android:textStyle="bold"
                    android:fontFamily="serif"
                    android:textSize="8sp"
                    tools:ignore="InvalidId" />

                <TextView
                    android:id="@+id/munContainer"
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:layout_below="@+id/addressLabel"
                    android:layout_toRightOf="@id/brgyContainer"
                    android:padding="5dp"
                    android:textColor="#1e6f5c"
                    android:textStyle="bold"
                    android:fontFamily="serif"
                    android:textSize="8sp"
                    tools:ignore="InvalidId" />

                <TextView
                    android:id="@+id/cityContainer"
                    android:layout_width="66dp"
                    android:layout_height="30dp"
                    android:layout_below="@+id/addressLabel"
                    android:layout_toRightOf="@+id/munContainer"
                    android:padding="5dp"
                    android:textColor="#1e6f5c"
                    android:textStyle="bold"
                    android:fontFamily="serif"
                    android:textSize="8sp"
                    tools:ignore="InvalidId" />

                <TextView
                    android:id="@+id/provContainer"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_below="@+id/addressLabel"
                    android:layout_toRightOf="@+id/cityContainer"
                    android:padding="5dp"
                    android:textColor="#1e6f5c"
                    android:textSize="8sp"
                    tools:ignore="InvalidId" />

                <TextView
                    android:id="@+id/infoLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/brgyContainer"
                    android:text="BIRTH DATE           SEX            HT.(cm)      WT.(kg)        NATIONALITY"
                    android:textSize="9sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/bdayContainer"
                    android:layout_width="66dp"
                    android:layout_height="30dp"
                    android:layout_below="@+id/infoLabel"
                    android:layout_alignParentLeft="true"
                    android:padding="5dp"
                    android:textColor="#1e6f5c"
                    android:textStyle="bold"
                    android:fontFamily="serif"
                    android:textSize="8sp"
                    tools:ignore="InvalidId" />

                <TextView
                    android:id="@+id/sexContainer"
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:layout_below="@+id/infoLabel"
                    android:layout_toRightOf="@id/brgyContainer"
                    android:padding="5dp"
                    android:textColor="#1e6f5c"
                    android:textStyle="bold"
                    android:fontFamily="serif"
                    android:textSize="8sp"
                    tools:ignore="InvalidId" />

                <TextView
                    android:id="@+id/heightContainer"
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:layout_below="@+id/infoLabel"
                    android:layout_toRightOf="@id/sexContainer"
                    android:gravity="left"
                    android:padding="5dp"
                    android:textColor="#1e6f5c"
                    android:textStyle="bold"
                    android:fontFamily="serif"
                    android:textSize="8sp"
                    tools:ignore="InvalidId" />

                <TextView
                    android:id="@+id/weightContainer"
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:layout_below="@+id/infoLabel"
                    android:layout_toRightOf="@id/heightContainer"
                    android:gravity="left"
                    android:padding="5dp"
                    android:textColor="#1e6f5c"
                    android:textStyle="bold"
                    android:fontFamily="serif"
                    android:textSize="8sp"
                    tools:ignore="InvalidId" />


                <TextView
                    android:id="@+id/nationalitytContainer"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_below="@+id/infoLabel"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="-1dp"
                    android:layout_toRightOf="@id/weightContainer"
                    android:padding="5dp"
                    android:textColor="#1e6f5c"
                    android:textStyle="bold"
                    android:fontFamily="serif"
                    android:textSize="8sp"
                    tools:ignore="InvalidId" />

                <TextView
                    android:id="@+id/idInfoLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/bdayContainer"
                    android:text="RESTRICTION      CONDITION      AGY         EXPIRATION"
                    android:textSize="9sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/restrictContainer"
                    android:layout_width="66dp"
                    android:layout_height="30dp"
                    android:layout_below="@+id/idInfoLabel"
                    android:layout_alignParentLeft="true"
                    android:gravity="center_horizontal"
                    android:padding="5dp"
                    android:text="12"
                    android:textColor="#1e6f5c"
                    android:textStyle="bold"
                    android:fontFamily="serif"
                    android:textSize="8sp"
                    tools:ignore="InvalidId" />

                <TextView
                    android:id="@+id/conditionContainer"
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    android:layout_below="@+id/idInfoLabel"
                    android:layout_toRightOf="@id/restrictContainer"
                    android:padding="5dp"
                    android:text="A"
                    android:textColor="#1e6f5c"
                    android:textStyle="bold"
                    android:fontFamily="serif"
                    android:textSize="8sp"
                    tools:ignore="InvalidId" />

                <TextView
                    android:id="@+id/agyContainer"
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:layout_below="@+id/idInfoLabel"
                    android:layout_toRightOf="@id/conditionContainer"
                    android:padding="5dp"
                    android:text=" G11"
                    android:textColor="#1e6f5c"
                    android:textStyle="bold"
                    android:fontFamily="serif"
                    android:textSize="8sp"
                    tools:ignore="InvalidId" />

                <TextView
                    android:id="@+id/expireContainer"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_below="@+id/idInfoLabel"
                    android:layout_toRightOf="@id/agyContainer"
                    android:gravity="left"
                    android:padding="5dp"
                    android:textColor="#00c853"
                    android:textStyle="bold"
                    android:fontFamily="serif"
                    android:textSize="8sp"
                    tools:ignore="InvalidId" />


                <TextView
                    android:id="@+id/licenseLabel"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:layout_below="@+id/restrictContainer"
                    android:layout_alignParentLeft="true"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="LICENSE NO."
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/licenseContainer"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:layout_below="@+id/agyContainer"
                    android:layout_toRightOf="@+id/licenseLabel"
                    android:gravity="center"
                    android:padding="5dp"
                    android:textColor="#00c853"
                    android:textStyle="bold"
                    android:fontFamily="serif"
                    android:textSize="10sp" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/expireContainer"
                    android:layout_toRightOf="@+id/licenseContainer"
                    android:src="@drawable/bar" />

            </RelativeLayout>


        </RelativeLayout>
    </RelativeLayout>
